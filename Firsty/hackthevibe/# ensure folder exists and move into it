#!/usr/bin/env python3
# Hack the Vibe — Starter (Mission 01: Caesar cipher)
# Simple CLI game — run with: python3 hackthevibe.py

import sys
import time

def slow(t):
    time.sleep(t)

WELCOME = r"""
 _     _            _   _  _   _   _   _   _ 
| |   | |          | | | || | | | | | | | | |
| |__ | | __ _  ___| |_| || |_| | | | | | | |
|  _ \| |/ _` |/ __| __|__   _| | | | | | | |
| |_) | | (_| | (__| |_   | |   |_| |_| |_| |
|_.__/|_|\__,_|\___|\__|  |_|   \___/ \___/ 
        Hack the Vibe — Mission 01
"""

def caesar_decrypt(s, shift):
    out = []
    for ch in s:
        if 'a' <= ch <= 'z':
            out.append(chr((ord(ch)-97-shift) % 26 + 97))
        elif 'A' <= ch <= 'Z':
            out.append(chr((ord(ch)-65-shift) % 26 + 65))
        else:
            out.append(ch)
    return ''.join(out)

def mission_one():
    enc = "Wkh frgh lv wkh nhb"
    print("\nMission 01: Crack the Cipher")
    print("Encrypted message:")
    print("  >", enc)
    print("\nTip: It's a Caesar cipher. Try simple shifts (0-25).")
    attempts = 0
    while True:
        attempts += 1
        ans = input("\nEnter the decrypted message: ").strip()
        # normalize spacing/case for check
        if ans.lower().replace(" ", "") == caesar_decrypt(enc, 3).lower().replace(" ", ""):
            print("\n✅ Correct. Access granted. +50 XP")
            print("New intel unlocked: \"In silence, you find clarity.\"")
            print(f"Attempts: {attempts}")
            break
        else:
            print("❌ Nope. Keep trying or type 'hint' for help.")
            if ans.lower() == "hint":
                print("Hint: Try decoding by shifting letters 3 positions backwards.")
            if attempts >= 6:
                print("Need a push? Type 'reveal' to reveal the answer (kills XP).")
            if ans.lower() == "reveal":
                print("\nRevealed answer: ", caesar_decrypt(enc, 3))
                break

def main():
    print(WELCOME)
    time.sleep(0.5)
    name = input("Username: ").strip() or "Silent Coder"
    print(f"\nVerifying identity for {name}...", end="", flush=True)
    slow(0.6)
    print(" ✓")
    slow(0.3)
    print(f"Welcome back, {name}.\n")
    mission_one()
    print("\nMission complete. Save your progress? (not implemented yet)\n")
    print("Exit: ctrl+c or close terminal")

if __name__ == '__main__':
    try:
        main()
    except KeyboardInterrupt:
        print("\nSession terminated.")
        sys.exit(0)
